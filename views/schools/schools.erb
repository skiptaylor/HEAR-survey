
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<div class="pull-right">
					<p style="float: right; margin-top: 12px;"><a href="/admin/admin_edit" class="btn btn-info btn-small">Admin Index</a></p>
				</div>
				<h1 class="page-header">Schools</h1>
			</div>
			
			<div class="row">
				<div class="col-md-4">
					<form class="form-search form-inline" method="get">
						<div class="input-group">
			
							<input type="text" class="search-query form-control col-sm-6" name="search" placeholder="Search School Zip" value="<%= params[:search] %>" />
							<button class="btn btn-info" type="submit" >Find</button>
			 
						</div>
					</form>
				</div>
			</div>
			
			<div class="col-md-12">
			
					<small style="color: #808080;">Shows first 100 results only</small>
				
				<table class="table table-striped table-sm table-hover">
					<tr class="table-success">
						<th>School</th>
						<th>City State</th>
						<th>School ID</th>
						<th style="text-align: center;"><a href="/schools/create" class="btn btn-success btn-mini">New</a></th>
					</tr>
					<% @school.sort_by(&:updated_at).reverse.each do |school| %>
					
					<tr>
						<td><%= school.school_name %></td>
						<td><%= school.city %>,  <%= school.state %></td>
						<td><%= school.school_password %></td>
						<td style="text-align: center;"><a href="/schools/<%= school.id %>/edit_admin" class="btn btn-info btn-mini"> Edit </a></td>
					</tr>
					<% end %>
					<tr>
						<th colspan="5"><small>Total number of schools:<% @school = School.all %> <strong><%= @school.count %></strong><br />
						</th>

					</tr>
				</table>
			</div>

			<div class="col-md-4">
				 <p> </p>
			</div>
		
		</div>
	</div> <!-- /container -->

