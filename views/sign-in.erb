<div class="row">
	<div class="col-md-2 col-lg-3 col-xlg-4">
		   
	</div>
	<div class="col-md-8 col-lg-6 col-xl-5">
		<br /><br />
		<h6 style="font-size: 1.7em;">Tell us who you are</h6>
		<form class="form-signin" method="post" action="sign-in">
		
		<div class="form-floating mb-3">
		  <input type="name" name="name" id="name" class="form-control" id="floatingName" placeholder="Name" value="<%= params[:name] %>" required>
		  <label for="floatingName">Name</label>
		</div>
		
		<div class="form-floating mb-3">
		  <input type="email" name="email" id="email" class="form-control" id="floatingInput" placeholder="name@example.com" value="<%= params[:email] %>" required>
		  <label for="floatingInput">Email address</label>
		</div>
		
		<div class="form-floating mb-3">
		  <input type="password" name="password" id="password" class="form-control" id="floatingPassword" placeholder="Password" value="<%= params[:password] %>" required>
		  <label for="floatingPassword">Password</label>
		</div>
		
		 <input class="btn btn-success pull-right" type="submit" value="Start Survey" />
		</form>
	</div>
</div>
