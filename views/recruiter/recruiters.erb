	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<p style="float:right;"><a href="/admin/admin_edit" style="margin-top: 6px;" class="btn">Admin Index</a>
			<h1 class="page-header">Recruiters</h1>
			
			
			<div class="control-group">
				<div class="input-append form-group mb-2">
					<form class="form-search form-inline" method="get">
					<input type="text" class="search-query form-control col-sm-6" name="search" placeholder="Search last name - case sensitive" value="<%= params[:search] %>" />
					
					&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-success">Find</button>
					</form>
				</div>	
			<small style="color: #808080;">Shows 50 most recent results only</small>
			<table class="table table-striped table-hover table-sm">
				<tr>
				
				<th>Recruiter</th>
				<th>Email</th>
				<th style="text-align: center;">State</th>
				<th> </th>
			</tr>
			<% @recruiter.each do |recruiter| %>
			<tr>
				
				<td><%= recruiter.rank %> <%= recruiter.first_name %> <%= recruiter.last_name %></td>
				<td><%= recruiter.email %></td>
				<td style="text-align: center;"><%= recruiter.state %></td>
				<td style="text-align: right;"><a href="/recruiters/<%= recruiter.id %>/edit" class="btn btn-small">Edit</a></td>
			</tr>
			<% end %>
			</table>
			</div>
			
			</div>
		</div>
	</div>
