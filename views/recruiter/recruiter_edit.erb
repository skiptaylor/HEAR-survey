<div class="container" style="margin-bottom: 4em;">	
	<div class="row">  
		<div class="col-md-12">
			<h1 class="page-header">Edit ARNG Rep</h1>
		</div>
	</div>
	<form method="post">
	<div class="row"> 
		<div class="col-md-6" style="margin-top: -1em;">
			<div class="form-row">
				<div class="form-group col-3">
					<label for="rank">Rank</label>
					<input type="text" name="rank" id="rank" class="form-control" value="<%= @recruiter.rank %>" />
				</div>
				<div class="form-group">
					<label for="first_name">First name</label>
					<input type="text" name="first_name" id="first_name" class="form-control" value="<%= @recruiter.first_name %>" />
				</div>
				<div class="form-group">
					<label for="last_name">Last name</label>
					<input type="text" name="last_name" id="last_name" class="form-control" value="<%= @recruiter.last_name %>" />
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" name="email" id="email" class="form-control" value="<%= @recruiter.email %>" />
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<% if @recruiter.password == nil || @recruiter.password == "" %>
					<input type="password" name="password" id="password" class="form-control" value="<%= @recruiter.password %>" required autofocus/>
					<% else %>
					<input type="password" name="password" id="password" class="form-control" value="<%= @recruiter.password %>" required/>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-md-6" style="margin-top: -1em;">
			<div class="form-row">
				<div class="form-group">
					<label for="address1">Address</label>
					<input type="text" name="address1" id="address1" class="form-control" value="<%= @recruiter.address1 %>" />
					<input style="margin-top: -1px;" type="text" name="address2" id="address2" class="form-control" value="<%= @recruiter.address2 %>" />
				</div>
				<div class="form-group">
					<label for="city">City</label>
					<input type="text" name="city" id="city" class="form-control" value="<%= @recruiter.city %>" />
				</div>
				<div class="form-group col-3">
					<label for="state">State</label>
					<select type="text" class="form-control" id="state" name="state" value="<%= @recruiter.state %>">
							<option value=""></option>
						<% @state.sort{|a,b| a.id <=> b.id}.each do |state| %>
							<option value="<%= state.abbr %>" <%= 'selected' if state.abbr == @recruiter.state %>><%= state.abbr %></option>
						<% end %>
					</select>
				</div>
				<div class="form-group col-3">
					<label for="zip">ZIP</label>
					<input type="text" name="zip" id="zip" class="form-control" maxlength="10" minlength="5" value="<%= @recruiter.zip %>" />
				</div>
				<div class="form-group">
					<label for="phone">Phone</label>
					<input type="text" name="phone" id="phone" class="form-control" value="<%= @recruiter.phone %>" />
				</div>
				<div class="form-group">
					<p style="margin-top:14px;"><input class="btn btn-primary" type="submit" value="Save" /> &nbsp; <a onclick="goBack()" class="btn btn-secondary" style="color: white;">Cancel</a> &nbsp; <% if session[:admin] %><a class="delete btn btn-danger" href="/recruiters/<%= @recruiter.id %>/delete">Delete</a><% end %></p>
				</div>
			</div>
		</div> <!-- /span6 -->
	</form>	
	</div> <!-- /row -->
</div> <!-- /container -->

		
		
